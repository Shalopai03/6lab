<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <script>
        function printMatrixColumns(matrix) {
            matrix.forEach((row, rowIndex) => {
                const columnElements = row.map((element, colIndex) => matrix[colIndex][rowIndex]);
                document.body.innerHTML += `<p>Column ${rowIndex + 1}: [${columnElements.join(', ')}]</p>`;
            });
        }
        
        // Запросите у пользователя количество строк и столбцов
        var rows = parseInt(prompt('Введите количество строк'));
        var columns = parseInt(prompt('Введите количество колонн'));

        // Создаем матрицу
        var inputMatrix = [];

        // Ввод пользовательских переменных
        for (let i = 0; i < rows; i++) {
            var row = [];
            for (let j = 0; j < columns; j++) {
                var element = parseFloat(prompt(`Введите элемент в строке ${i + 1}, колонне ${j + 1}`));
                row.push(element);
            }
            inputMatrix.push(row);
        }

        // Функция печати столбцов
        printMatrixColumns(inputMatrix);
    </script>
</body>
</html>
